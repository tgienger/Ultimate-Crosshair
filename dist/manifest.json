{
  "manifest_version":"1",
  "type":"WebApp",
  "meta":{
    "name":"Ultimate Crosshair",
    "version":"0.1.0",
    "minimum-overwolf-version": "0.77.4.0",
    "author":"Tj Gienger",
    "icon":"src/images/IconMouseOver.png",
    "icon_gray":"src/images/IconMouseNormal.png",
    "description":"Crosshair Overlay"
  },
  "data": {
    "start_window":"MenuWindow",
    "windows":{
      "MenuWindow":{
        "file":"index.html",
        "transparent":true,
        "resizable":false,
        "size": {"width": 1000, "height": 500},
        "show_in_taskbar": true,
        "in_game_only": false
      },
      "CrossWindow": {
        "file": "cross.html",
        "transparent": true,
        "resizable":false,
        "clickthrough": true,
        "show_in_taskbar":false,
        "in_game_only": false,
        "size": {"width": 200, "height": 200}
      }
    },
    "hotkeys": {
      "main": {
        "title": "Ultimate Crosshair",
        "action-type": "toggle",
        "default": "CTRL+ALT+C"
      }
    },
    "plugins": [
      "npOverwolfSamplePlugin.dll"
    ]
  }
}